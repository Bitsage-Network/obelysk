# =============================================================================
# Obelysk Protocol - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values.
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# =============================================================================

# -----------------------------------------------------------------------------
# Network Configuration (REQUIRED)
# -----------------------------------------------------------------------------

# Starknet network: "devnet" | "sepolia" | "mainnet" | "local"
NEXT_PUBLIC_STARKNET_NETWORK=sepolia

# Starknet RPC endpoint (REQUIRED)
# Examples:
#   Alchemy:  https://starknet-sepolia.g.alchemy.com/starknet/version/rpc/v0_7/<API_KEY>
#   Infura:   https://starknet-sepolia.infura.io/v3/<API_KEY>
#   Blast:    https://starknet-sepolia.blastapi.io/<API_KEY>
NEXT_PUBLIC_RPC_URL=

# -----------------------------------------------------------------------------
# Mainnet Configuration (required when NEXT_PUBLIC_STARKNET_NETWORK=mainnet)
# -----------------------------------------------------------------------------

# Dedicated mainnet RPC — DO NOT use public endpoints in production
#   Alchemy:  https://starknet-mainnet.g.alchemy.com/starknet/version/rpc/v0_7/<API_KEY>
#   Infura:   https://starknet-mainnet.infura.io/v3/<API_KEY>
NEXT_PUBLIC_MAINNET_RPC_URL=

# Relay service URL for privacy transaction relaying
NEXT_PUBLIC_RELAY_URL=

# AVNU paymaster API key (enables gasless transactions)
NEXT_PUBLIC_AVNU_API_KEY=

# -----------------------------------------------------------------------------
# API & WebSocket (optional, defaults shown)
# -----------------------------------------------------------------------------

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3030

# WebSocket URL for prover service
NEXT_PUBLIC_WS_URL=ws://localhost:3030/ws/prover

# -----------------------------------------------------------------------------
# Demo Mode (optional)
# -----------------------------------------------------------------------------

# Set to "true" to enable demo/mock mode (no real transactions)
NEXT_PUBLIC_DEMO_MODE=false

# -----------------------------------------------------------------------------
# Contract Addresses - Production (sepolia / mainnet)
# Required when NEXT_PUBLIC_STARKNET_NETWORK is "sepolia" or "mainnet"
# -----------------------------------------------------------------------------

# SAGE token contract address
NEXT_PUBLIC_SAGE_TOKEN_ADDRESS=0x0

# OTC orderbook contract address
NEXT_PUBLIC_OTC_ORDERBOOK_ADDRESS=0x0

# Privacy pools contract address
NEXT_PUBLIC_PRIVACY_POOLS_ADDRESS=0x0

# Confidential swap contract address
NEXT_PUBLIC_CONFIDENTIAL_SWAP_ADDRESS=0x0

# Faucet contract address (sepolia only)
NEXT_PUBLIC_FAUCET_ADDRESS=0x0

# -----------------------------------------------------------------------------
# Contract Addresses - Devnet / Local
# Used when NEXT_PUBLIC_STARKNET_NETWORK is "devnet" or "local"
# -----------------------------------------------------------------------------

# Devnet SAGE token
NEXT_PUBLIC_DEVNET_SAGE_TOKEN=0x0

# Devnet mock USDC
NEXT_PUBLIC_DEVNET_MOCK_USDC=0x0

# Devnet mock STRK
NEXT_PUBLIC_DEVNET_MOCK_STRK=0x0

# Devnet mock wBTC
NEXT_PUBLIC_DEVNET_MOCK_WBTC=0x0

# Devnet OTC orderbook
NEXT_PUBLIC_DEVNET_OTC_ORDERBOOK=0x0

# Devnet privacy pools
NEXT_PUBLIC_DEVNET_PRIVACY_POOLS=0x0

# Devnet confidential swap
NEXT_PUBLIC_DEVNET_CONFIDENTIAL_SWAP=0x0

# Devnet faucet
NEXT_PUBLIC_DEVNET_FAUCET=0x0

# -----------------------------------------------------------------------------
# VM31 Relayer & BTC Privacy Vault (optional)
# -----------------------------------------------------------------------------

# VM31 relayer HTTP URL (services/vm31-relayer)
NEXT_PUBLIC_VM31_RELAYER_URL=http://localhost:3080

# VM31 relayer API key
NEXT_PUBLIC_VM31_API_KEY=

# VM31Pool contract address (holds shielded UTXO notes)
NEXT_PUBLIC_VM31_POOL_ADDRESS=0x0

# VM31ConfidentialBridge contract address (VM31 → ConfidentialTransfer)
NEXT_PUBLIC_VM31_BRIDGE_ADDRESS=0x0

# -----------------------------------------------------------------------------
# Garden Finance Bridge (optional — enables native BTC deposits/withdrawals)
# -----------------------------------------------------------------------------

# App ID for Garden API access (enables "From Bitcoin L1" deposit toggle)
